<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
              crossorigin="anonymous" />
    -->

    <script>
        window.app = window.app || {};
        app.siteRoot = "@Url.Content("~/")";
    </script>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/dou/css")
    

    <!-- custom css -->
    @Styles.Render("~/iHub/css")

    @*@Styles.Render("~/Content/prj/news/css")*@
    <link href="~/Scripts/gis/b3/css/bootstrap.css" rel="stylesheet">
    @*<link href="~/Content/prj/news.css" rel="stylesheet">*@
    @*@Styles.Render("~/content/prj/css")*@
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/dou/js")

    <link href="~/Images/logo.ico" rel="icon" />

    <title>Ftis iHub</title>

    @*Block工時挑選 WTOptionUserFno*@

    @if (Dou.Context.CurrentUserBase == null &&
        Dou.Help.DouUnobtrusiveSession.Session["WTOptionUserFno"] == null)
    {
        string returnurl = Request.Url.ToString();
        Response.Redirect("~/User/DouLogin" + "?returnUrl=" + returnurl);
    }

</head>
<body>

    @*RWD Menu(平板+手機) _MenuRWDPartial(共用_MenuPartial)*@
    @Html.Partial("_HeaderPartial")@*標頭*@
    <!-- main section start -->
    <div class="container mt-4">
        <div class="row g-3">
            <!-- main-left start -->
            <div class="col-xl-2 d-none d-xl-block">
                <div class="left-section d-flex flex-column align-items-start justify-content-start gap-2 shadow rounded-3 p-3">
                    @*DeskTop Menu(平板+手機) _MenuPartial*@
                    @Html.Partial("_MenuPartial", "DeskTop")@*功能菜單*@
                </div>
            </div>
            <!-- main-left end -->
            <!-- main-right start -->
            <div class="col-xl-10">
                <div class="right-section mb-4">
                    @Html.Partial("_TitlePartial")@*頁面標題*@
                    <!-- body-content -->
                    <div class="body-content">
                        @RenderBody()@*各controoler資料*@
                    </div>
                </div>
            </div>
            <!-- main-right end -->
        </div>
    </div>

    <!-- main section end -->
    <!-- Optional JavaScript -->
</body>
</html>